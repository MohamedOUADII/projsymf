{% extends 'base.html.twig' %}

{% block title %}
    Edit Article

{% endblock %}

{% block body %}
    <br/><br/><br/>
    <div class='container'>
        <form method="post">
            <div class="form-group">
                <label >ID = {{ article.id }}</label>
                <input type="text" name='id' class="form-control" value="{{ article.id }}" disabled/>
            </div>

            <div class="form-group">
                <label >Name = = {{ article.name }}</label>
                <input type="text" name='name' class="form-control" value="{{ article.name }}">
            </div>

            <div class="form-group">
                <label >Body = = {{ article.body }}</label>
                <textarea class="form-control"  name='body' value="{{ article.body }}">{{ article.body }}</textarea>
            </div>

            <button type='submit'  class='btn btn-warning'> Edit Article</button>
        </form>
    </div>
{% endblock %}